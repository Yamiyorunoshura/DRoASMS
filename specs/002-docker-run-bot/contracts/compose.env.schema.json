{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Docker Compose Environment Schema",
  "description": "Schema for validating .env.example contains required keys",
  "type": "object",
  "required": ["DISCORD_TOKEN"],
  "properties": {
    "DISCORD_TOKEN": {
      "type": "string",
      "description": "Discord bot token (required)"
    },
    "DISCORD_GUILD_ALLOWLIST": {
      "type": "string",
      "description": "Comma-separated guild IDs (optional)"
    },
    "DATABASE_URL": {
      "type": "string",
      "description": "PostgreSQL connection string (optional)"
    },
    "PGADMIN_DEFAULT_EMAIL": {
      "type": "string",
      "description": "pgAdmin email (optional)"
    },
    "PGADMIN_DEFAULT_PASSWORD": {
      "type": "string",
      "description": "pgAdmin password (optional)"
    },
    "PGADMIN_PORT": {
      "type": "string",
      "description": "pgAdmin port (optional)"
    },
    "TRANSFER_EVENT_POOL_ENABLED": {
      "type": "string",
      "description": "Enable transfer event pool (optional)"
    },
    "TRANSFER_DAILY_LIMIT": {
      "type": "string",
      "description": "Daily transfer limit (optional)"
    }
  }
}
