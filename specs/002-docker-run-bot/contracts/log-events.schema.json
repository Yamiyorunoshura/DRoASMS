{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Log Events Schema",
  "description": "Schema for structured log events",
  "type": "object",
  "required": [
    "event"
  ],
  "properties": {
    "event": {
      "type": "string",
      "description": "Event name"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp"
    },
    "level": {
      "type": "string",
      "description": "Log level"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "event": {
            "const": "bot.ready"
          }
        }
      },
      "then": {
        "properties": {
          "event": {
            "const": "bot.ready"
          }
        }
      }
    }
  ]
}
